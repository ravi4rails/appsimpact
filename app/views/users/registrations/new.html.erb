<section class="mt-5 mb-5">
  <div class="col-sm-12 text-center"><h4 class="text-uppercase mb16">Sign Up</h4></div>
  <div class="container mt-3">
    <div class="row">
      <div class="col-lg-8 offset-2 col-md-8 offset-2 sign-up-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class: "form-control form-control-lg", placeholder: "First Name" %>
              </div>
            </div>  
            <div class="col-md-6">
              <div class="form-group">
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class: "form-control form-control-lg", placeholder: "Last Name" %>
              </div>
            </div>  
          </div> 
          <div class="row">
            <div class="col-md-6">
              <div class="form-group mt-4">
                <%= f.text_field :address, autofocus: true, autocomplete: "address",class: "form-control form-control-lg",placeholder: "Address" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group mt-4">
                <%= f.select :stream, options_for_select(["CS", "EC", "MCA", "Other"],:disabled => ["Select One"]), {}, { :class => 'form-control form-control-lg' } %>
              </div> 
            </div>  
          </div>  
          <div class="row">
            <div class="col-md-6">
              <div class="form-group mt-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-lg",placeholder: "Your Email" %>
              </div>
            </div>
            <div class="col-md-6">  
              <div class="form-group mt-4">
                <%= f.text_field :contact, autofocus: true, autocomplete: "contact",class: "form-control form-control-lg",placeholder: "Your Contact" %>
              </div>
            </div>  
          </div>  
          <%= f.hidden_field :role, value: "Student" %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group mt-4">
                <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg", placeholder: "Password" %>
              </div>
            </div>  
            <div class="col-md-6">
              <div class="form-group mt-4">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg", placeholder: "Confirm Password" %>
              </div>
            </div>  
          </div>  

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-block sign-up-btn btn-lg " %>
          </div>
        <% end %>
      </div>  
    </div>
  </div>    
</section>    

