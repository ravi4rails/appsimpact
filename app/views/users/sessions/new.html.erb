<section class="mt-5 mb-5">
  <div class="col-sm-12 text-center"><h4 class="text-uppercase mb16">Log in</h4></div>
  <div class="container mt-3">
    <div class="row">
      <div class="col-lg-6 offset-3 col-md-6 offset-3 sign-up-form">
        <p class="alert"><%= alert %></p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= devise_error_messages! %>
          <div class="form-group mt-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Your Email"%>
          </div>

          <div class="form-group mt-4">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Your Password", class: "form-control" %>
          </div>
          <div class="form-group mt-4">
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "remeber-link"%>
              </div>
            <% end -%>
          </div>  

          <div class="actions form-group">
            <%= f.submit "Log in",class: "btn btn-block sign-up-btn btn-lg " %>
          </div>
        <% end %>
        <div class="form-group">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-link" %>
        </div>
      </div>
    </div>
  </div>      
</section>  
