<section class="mt-5 mb-5">
  <div class="col-sm-12 text-center"><h4 class="text-uppercase mb16">Resend unlock instructions</h4></div>
  <div class="container mt-3">
    <div class="row">
      <div class="col-lg-6 offset-3 col-md-6 offset-3 sign-up-form">
        <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placholder: "Email", class: "form-control form-control-lg"%>
          </div>

          <div class="actions">
            <%= f.submit "Resend unlock instructions", class: "btn btn-block sign-up-btn btn-lg " %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>      
    
